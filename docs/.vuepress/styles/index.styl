/**
 * Code Editor Styles
 */
code, kbd, .line-number {
  font-family: "JetBrains Mono", sans-serif!important;
  line-height: 1.2;
}
.token.operator {
  font-family: source-code-pro, Menlo, Monaco, Consolas, "Courier New", monospace;
}
.token.important,
.token.constant,
.token.keyword {
  color: #CC7832;
}
.token.function {
  color: #FFC66D;
}
.token.comment {
  color: #808080;
}
.token.string {
  color: #6A8759;
}
.token.variable {
  color: #9876AA;
}
.theme-default-content pre[class="language-php"] code
.theme-default-content pre[class="language-http"] code
.theme-default-content pre[class="language-vue"] code
.theme-default-content pre[class="language-javascript"] code
.theme-default-content pre[class="language-js"] code
.theme-default-content pre[class="language-bash"] code,
.theme-default-content pre[class="language-bash"] code > .token.function,
.token.operator,
.token.package,
.token.punctuation,
.token.class-name {
  color: #A9B7C6;
}

/**
 * Build Landing Page
 */
.landing-page-wrapper {
  height: calc(100vh - 58px);
  box-sizing: border-box;

  .theme-default-content {
    max-width: 100%;
    margin: 0 auto;
    padding: 0 0;
  }
}

table {
  width: 100%;
  display: table;
}