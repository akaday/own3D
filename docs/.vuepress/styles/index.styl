@import url('https://fonts.bunny.net/css2?family=Montserrat:wght@300;400;500;700&display=swap');

@font-face {
  font-family: 'JetBrains Mono';
  font-style: normal;
  font-display: swap;
  /* Read next point */
  unicode-range: U+000-5FF; /* Download only latin glyphs */
  src: local('JetBrains Mono'),
          url('https://fa-cdn.bitinflow.com/fonts/JetBrainsMono-Regular.woff2') format('woff2'),
          url('https://fa-cdn.bitinflow.com/fonts/JetBrainsMono-Regular.woff') format('woff');
}

body {
  font-family: 'Montserrat', sans-serif;
}

h1,h2,h3,h4,h5,h6 {
  font-family: 'JetBrains Mono', 'Montserrat', sans-serif;
}


