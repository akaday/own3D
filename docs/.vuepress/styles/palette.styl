$accentColor = #ff9602
$textColor = #0e0e12
$borderColor = #eaecef
$codeBgColor = #181e23

$vue-color = #ff9602
$bg-color = #0d1114
$MQNarrow = 959px
$MQMobile = 719px
$MQMobileNarrow = 419px

body, html
  background-color $bg-color
  color desaturate(lighten($bg-color, 80%), 50%)

.theme-default-content code
  background-color: #181e23;
  color: lighten($bg-color, 80%);

.theme-default-content blockquote
  background-color: #181e23;
  color: lighten($bg-color, 80%);

.custom-block.tip
  background-color: #4a7963;
  border-color: #42b983;
  color: #ccccd2;

.custom-block.danger
  background-color: #91625c;
  border-color: #a82f20;
  color: #ccccd2;

.custom-block.warning
  background-color: #8f7346;
  border-color: #e7c000;
  color: #ccccd2;

.custom-block.warning a
  color: inherit;

table, th, td
  border-color desaturate(lighten($bg-color, 20%), 10%)

tr:nth-child(2n)
  background-color desaturate(lighten($bg-color, 10%), 10%)

.search-box
  input
    border-color desaturate(lighten($bg-color, 30%), 30%)
    background-color $bg-color
    color desaturate(lighten($bg-color, 80%), 50%)
  .suggestions
    background-color desaturate(lighten($bg-color, 15%), 10%)
    border 0
  .suggestion
    a
      color desaturate(lighten($bg-color, 80%), 50%)

    &.focused
      background-color desaturate(lighten($bg-color, 30%), 30%)
      a
        color #fff

.algolia-search-wrapper
  .algolia-autocomplete
    .ds-dropdown-menu
      border: 0
      background-color desaturate(lighten($bg-color, 15%), 10%)

      &:before
        background-color desaturate(lighten($bg-color, 15%), 10%)
        border: 0;

@media (min-width: $MQMobile)
  .dropdown-wrapper
    .nav-dropdown
      background-color desaturate(lighten($bg-color, 15%), 10%)
      border 0

      .dropdown-item
        h4
          border-top-color desaturate(lighten($bg-color, 30%), 30%)

.sw-update-popup
  background-color desaturate(lighten($bg-color, 15%), 10%)
  border 0

.navbar
  border-bottom-color desaturate(lighten($bg-color, 10%), 10%)
  background-color $bg-color

  .site-name
    color #fff

  .links
    background-color $bg-color

.page-edit
  .edit-link
    a
      color desaturate(lighten($bg-color, 50%), 50%)

      &:hover,
      &:focus
        color #fff
  .last-updated
    .prefix
      color desaturate(lighten($bg-color, 50%), 50%)

    .time
      color desaturate(lighten($bg-color, 40%), 50%)

h2
  border-bottom-color desaturate(lighten($bg-color, 10%), 10%)

hr
  border-top-color desaturate(lighten($bg-color, 10%), 10%)

.page-nav
  .inner
    color desaturate(lighten($bg-color, 50%), 50%)
    border-top-color desaturate(lighten($bg-color, 10%), 10%)

.sidebar
  background-color $bg-color
  border-right-color desaturate(lighten($bg-color, 10%), 10%)

  .nav-links
    border-bottom-color desaturate(lighten($bg-color, 10%), 10%)

  a.sidebar-link
    color desaturate(lighten($bg-color, 80%), 50%)

    &:hover,
    &:focus,
    &.active
      color #fff

  .sidebar-heading
    color desaturate(lighten($bg-color, 80%), 50%)

    &.open,
    &:hover
      color #fff

.nav-links
  a
    color desaturate(lighten($bg-color, 80%), 50%)

    &:hover,
    &:focus,
    &.router-link-active
      color #fff

.home
  .hero
    .description
      color desaturate(lighten($bg-color, 50%), 50%)
    .action-button
      border 0
  .features,
  .footer
    border-top-color desaturate(lighten($bg-color, 10%), 10%)
  .feature
    h2
      color desaturate(lighten($bg-color, 70%), 40%)
    p
      color desaturate(lighten($bg-color, 50%), 50%)
  .footer
    color desaturate(lighten($bg-color, 50%), 50%)
